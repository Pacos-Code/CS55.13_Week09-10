rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow a signed-in user to upload ONE image for their own review path
    match /userUpload/{userId}/{carId}/{fileName} {
      allow read; // or restrict if needed
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024; // 5MB cap (optional)
    }

    // Existing catch-all: read for all; write only for admins
    match /{allPaths=**} {
      allow read;
      allow write: if firestore.get(
        /databases/(default)/documents/users/$(request.auth.uid)
      ).data.isAdmin;
    }
  }
}